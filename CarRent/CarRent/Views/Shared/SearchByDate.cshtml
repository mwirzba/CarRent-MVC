@model CarRent.ViewModels.RentalDateViewModel
@{
    ViewData["Title"] = "SearchByDate";
}

<h1>SearchByDate</h1>

<form method="post" asp-action="Index">
    <div class="form-group">
        <label asp-for="RentDate" class="control-label"></label>
        <input asp-for="RentDate" type="date" id="datepicker" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReturnDate" class="control-label"></label>
        <input asp-for="ReturnDate" type="date" id="datepicker" class="form-control" />
    </div>
    <div class="alert alert-error">
        <div asp-validation-summary="All">
        </div>
    </div>
    <input type="submit" class="btn btn-outline-success" value="Search" />
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
