@model IEnumerable<CarRent.Models.CarModels.Car>
@{
    ViewData["Title"] = "List";
    Layout = "_AdminLayout";
}

<h1>List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index">Name</a>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<a class="btn btn-outline-success" asp-area=""
   asp-controller="Car" asp-action="New">
    Add car
</a>