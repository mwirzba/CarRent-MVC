@model CarRent.ViewModels.CarFormViewModel

@{
    ViewData["Title"] = "CarForm";
}


<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id" />
            <div class="form-group">
                <label asp-for="Car.Brand" class="control-label"></label>
                <input asp-for="Car.Brand" class="form-control" />
                <span asp-validation-for="Car.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.RentPrice" class="control-label"></label>
                <input asp-for="Car.RentPrice" class="form-control" />
                <span asp-validation-for="Car.RentPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.CarCategoryId" class="control-label"></label>
                <select asp-for="Car.CarCategoryId" class="form-control"
                        asp-items="@(new SelectList(Model.CarCategories,"Id","Name"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Car.CarCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.CarFuelTypeId" class="control-label"></label>
                <select asp-for="Car.CarFuelTypeId" class="form-control"
                        asp-items="@(new SelectList(Model.CarFuelTypes,"Id","Name"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Car.CarFuelTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.CarClassId" class="control-label"></label>
                <select asp-for="Car.CarClassId" class="form-control"
                        asp-items="@(new SelectList(Model.CarClasses,"Id","Name"))" >
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Car.CarClassId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.CarNumberOfSeats" class="control-label"></label>
                <input asp-for="Car.CarNumberOfSeats" class="form-control" />
                <span asp-validation-for="Car.CarNumberOfSeats" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
