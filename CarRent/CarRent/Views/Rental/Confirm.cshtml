@model CarRent.Models.Rental
@{
    ViewData["Title"] = "Confirm";
}

<h1>Confirm Reservation</h1>

<div class="row">
    <div class="col-md-4">

        <ul class="list-group">
            <li class="list-group-item">Car:  @Model.Car.Model @Model.Car.Brand</li>
            <li class="list-group-item">Price for one day: @Model.Car.RentPrice</li>
            <li class="list-group-item">Total Price: @Model.TotalPrice</li>
            <li class="list-group-item">Pick Up Date:  @Model.RentDate</li>
            <li class="list-group-item">Return Date:  @Model.ReturnDate</li>
        </ul>

        <form asp-action="Save" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarId" value="@Model.CarId" />
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <input type="hidden" asp-for="RentDate" value="@Model.RentDate" />
            <input type="hidden" asp-for="ReturnDate" value="@Model.ReturnDate" />
            <input type="hidden" asp-for="TotalPrice" value="@Model.TotalPrice" />
            <input type="hidden" asp-for="RentalStatusId" value="@Model.RentalStatusId" />
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Car">Go back to car list</a>
            </div>
        </form>

    </div>
</div>

